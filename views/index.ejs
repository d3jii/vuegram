<html>
<head>
	<title> Vue Gram</title>
	<link rel="stylesheet" type="text/css" href="v1/css/main.css">
	<link rel="stylesheet" type="text/css" href="v1/vendor/fa/css/fa.css">
</head>
<body>
	<style type="text/css">
	img.emoji{
    	height: 1em;
	   width: 1em;
	   margin: 0 .05em 0 .1em;
	   vertical-align: -0.1em;
    }
	</style>
<div id="vuegramapp">

<div id="vuetrols">

<button v-on:click="sortBy(posts,'comments')">Sort By Comments <i class="fa fa-comment"></i></button> 
<button v-on:click="sortBy(posts,'likes')">Sort By Likes</button>
<button v-on:click="showOnlyVideos(posts)">videos</button> 

</div>

<div id="vuetainer">

	<div class="vuegram-post" v-for="post in posts">
		<div class="vueserinfo">
			<span> <a href="http://instagram.com/{{post.user.username}}" target="_blank"> @{{post.user.username}} </a></span>
			<span>{{post.user.full_name}} </span>			
		</div>
		
		<div class="vuemage">
			<a href="{{getDownloadLink(post)}}" title="download">
			<img v-bind:src="post.images.standard_resolution.url" />
			</a>
		</div>
		
		<div class="vuestats">
			<span>{{post.comments.count}} <i class="fa fa-comment"></i></span>
			<span>{{post.likes.count}} <i class="fa fa-heart"></i></span>
		</div>

		<div class="vueption">
			{{{post.caption ? emojiParse(post.caption.text) : ""}}}
		</div>

		<button v-on:click="viewPostDetails(post)"> View Post Details </button>

		<div style="display:none" v-for="like in post.likes.data">
			{{updateLikers(like,post)}}
		</div>
		<div style="display:none" v-for="comment in post.comments.data">
			{{updateCommenters(comment,post)}}
		</div>		
		<div style="display:none" v-for="tagged_user in post.users_in_photo">
			{{updateTaggedUsers(tagged_user,post)}}
		</div>
		<div style="display:none" v-for="tag in post.tags">
			{{updatePostTags(tag,post)}}
		</div> 
		<!-- <img src="{{post.images.standard_resolution.url}}" /> -->
		
	</div>

</div>

</div>
<script src="v1/vendor/jq.js"></script>
<script src="v1/vendor/twemoj.js"></script>
<script src="v1/js/geturl.js"></script>
<script src="v1/vendor/vue.js"></script>
<script type="text/javascript" src="v1/extras/data.js"></script>
<script type="text/javascript" src="v1/js/u.js"></script>
<script type="text/javascript" src="v1/js/a.js"></script>
<script type="text/javascript" src="v1/js/main.js"></script>
</body>
</html>